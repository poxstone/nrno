  .go-right
  .go-left
    display block
    position absolute
    width 50px
    top 50%
    height 200px
    line-height 200px
    color white
    margin-top -100px
    background rgba(255,255,255,.1)
    cursor pointer
    z-index 2
    transition ease-in-out 250ms all
    &:before
      display block
      text-align center
    &:hover
      background rgba(255,255,255,.25)
  .go-left
    left 0
    &:before
      content '\25C0'
  .go-right
    right 0
    z-index 10px
    &:before
