html
  background #f4f2ef
  min-width $wrapper
html
body
  &.show-popUp
    overflow hidden !important

#banner
#content
  font-family $textFont
  line-height 1.3em
  font-size $fontSize
  h1,h2,h3,h4,h5,h6
    font-family $titleFont
    text-shadow none
    color $textColor
    padding $paddingBox 0
    margin $paddingBox auto
    font-weight normal
    line-height 1em

  > div
    //outline 1px solid rgba(0,255,0,.25)
    padding 0 10px
    max-width ($wrapper - 20)
    margin auto
    > *
      margin-left -1px !important //descuadre respecto al menu

#banner
  a
    color black
#nrno-popUp
  display none
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  overflow auto
  background-color $gray4
  background-color rgba($white,.9)
  opacity 0
  transition ease-in-out 750ms all
  z-index 10000
  .show-popUp &
    display block
    opacity 1
    animation loadingShow ease-in-out 750ms
  .hide-popUp &
    display block
    animation loadingHide ease-in-out 750ms
  .modal-cont
    background $black
    background rgba(0,0,0,.75)
    padding $paddingBox
    margin auto
    left 25%
    right 25%
    top 5%
    bottom 5%
    position absolute
    box-shadow $box-shadow3
    color $white
  #popup-quit
    display block
    float right
    background rgba($gray,0)
    width $paddingBox *2
    height $paddingBox *2
    color white
    font-size $text_h3
    opacity .75
    cursor pointer
    text-align center
    margin auto $paddingBox
    transition ease-in-out 250ms all
    &:hover
      background rgba($gray,.33)
      opacity 1

  #popUp-iframe
    box-shadow $box-shadow3
    background $white
    margin auto
    position absolute
    left $paddingBox *2
    right $paddingBox *2
    top $paddingBox *4
    bottom 20%
    overflow auto
    > iframe
    > img
      display none
      height 100%
      width auto
      margin auto
      transition ease-in-out 250ms all
      &.zoom
        min-width 100%
        min-height 100%
        height auto

  #popUp-pie
    margin auto
    position absolute
    left $paddingBox *2
    right $paddingBox *2
    top 80%
    bottom 10px
    padding-top $paddingBox *2
    text-align justify

#content
  h1
    color orange
  a
    color $blue
/*menu prindipal*/
ul#nrno-menu
  defaultDisplay(inline-block)
  li
    display inline-block
    width 12.4%
    margin auto
    vertical-align top
    border-top 1px solid $gray2
    border-bottom 1px solid $gray2

    & + li
      border-left 1px solid $gray2
    a
      background $salmon url(../img/bg-menu.png) center 90% no-repeat
      color $white
      display block
      display flex
      text-align center
      height 100px
      line-height 100px
      width 100%
      transition ease-in-out 250ms all
      font-family Merriweather, serif
      font-size 0.9em
      font-style normal
      font-weight lighter
      box-shadow rgba(0,0,0,0) 0 0 0
      position relative
      text-decoration none
      &:hover
        z-index 1
        background-color $salmon_hover
        background-position-y 95%
        box-shadow rgba(0,0,0,0.5) 0 4px 12px 0
      &:active
      &.active
        background-color $salmon_active

      &.destacada
        background-color $aquamarine
        &:hover
          background-color $aquamarine_hover
        &:active
        &.active
          background-color $aquamarine_active

      .text
        display inline-block
        line-height 1.2em
        vertical-align middle
        align-self center
        transform translateY(-5px)
        padding ($paddingBox *1.5 ) $paddingBox
        width 100%
        margin-left -($paddingBox)
        margin-right -($paddingBox)
        span
          display inline-block
          width 100%
          i
            font-style italic

#nrno-banner
  position relative
  padding-top 1px
  margin-top -1px
  margin-right 1px //descuadre respecto al menu
  height 400px//TEMPORAL
  background transparent
  overflow hidden
  &.mini
    height 0px !important
  &.maxi
    height 400px !important
    transition ease-in-out 2500ms all
    transition cubic-bezier(0.5, 0, 0.7, 1.4) 1000ms all
  &.presentacion
    height 448px

  .cont-img
    position absolute
    z-index 0
    width 100%
    height 100%
    background $gray2
    overflow hidden
    &:after
      content ""
      display block
      position absolute
      bottom 0
      height $paddingBox *2
      width 100%
      background linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.75))

    .img
      width 100%
      background $gray fixed repeat center bottom
      min-height 100%
      //background-size cover
    img.img
      position absolute
      width 100%
      bottom 0

  ul.menu
    defaultDisplay(block)
    font-family Merriweather, serif
    font-style italic
    position absolute
    width 22%
    margin-top $paddingBox *3
    z-index 3
    li
      defaultDisplay(block)
      margin-bottom 1px
      a
        display block
        color $salmon
        background $white
        background rgba($white,.85)
        padding $paddingBox
        text-decoration none
        transition ease-in-out 250ms all
        .pensamiento&
        .ahora&
          color $aquamarine

        &:hover
          background $white
          text-indent 1em

        &:active
        &.active
          background $salmon
          color $white
          .pensamiento&
          .ahora&
            background $aquamarine
            color $white


  .article
    position absolute
    margin-top $paddingBox *3
    width 100%
    height 92.5%
    transition ease-in-out 250ms all
    right 0
    opacity 1
    &.hide-left
      opacity 0
      right 25%

    .section
      position absolute
      height 82%
      width 45.5%
      left 22%
      color $white
      background rgba($gray2,.85)
      margin-left $paddingBox *3
      padding $paddingBox *2
      box-shadow $box-shadow1

      + .section
        display none

      h2
        color $salmon
        font-size $text_h1
        text-align right
        margin-top 0
        line-height 0.575em
        padding-bottom $paddingBox *2
        margin-bottom $paddingBox *2
        border-bottom 1px solid $gray
        font-style italic
        font-weight normal
        .pensamiento&
        .ahora&
          color $aquamarine

      .inner
        max-height 235px
        //max-height: 225px;
        overflow auto
        overflow-x hidden
        scrollbar(rgba(#000,0))
        padding-right $paddingBox
        //text-align justify
        blockquote
          position relative
          text-align justify
          background transparent url('../img/blockquote_ini.png') no-repeat top left
          margin $paddingBox *2 0
          padding 0 $paddingBox *4 0 $paddingBox *4
          background-size 32px
          &:after
            content ""
            display block
            position absolute
            z-index 0
            width 100%
            height 100%
            background transparent url('../img/blockquote_end.png') no-repeat bottom right

        p:first-child
        blockquote:first-child
          padding-top 0
          margin-top 0
  .botones
    position absolute
    right $paddingBox *10
    bottom $paddingBox *3

    a
      display block
      height 12px
      width 12px
      border-radius 100px
      border 4px solid white
      background $salmon
      position relative
      margin $paddingBox *2
      cursor pointer
      text-decoration none
      .pensamiento&
      .ahora&
        background $aquamarine

      span
        display none
        background $white
        color $textColor
        padding ($paddingBox *0.5) $paddingBox
        position absolute
        bottom 100%
        left 100%
        margin-bottom 15px
        margin-left 15px
        white-space nowrap
        &:after
          content ''
          display block
          position absolute
          top 100%
          margin-top -1px
          left 0
          arrow 15px 15px upLeft white

      &:hover
        background $salmon_hover
        .pensamiento&
        .ahora&
          background $aquamarine_hover
        span
          animation menuUp ease-in-out 250ms
          display block

#nrno-social
  ulUnformat(inline-block)
  &
    float right
    white-space nowrap
    margin ($paddingBox *1.5 - 2px) 0 ($paddingBox *1.5)
  a.lnk
    display inline-block
    background $gray2 center no-repeat
    background-size 100% 100%
    border-radius 100px
    height 28px
    width 28px
    text-decoration none
    margin-right 4px
    transition ease-in-out 250ms all
    &:hover
      background-color $aquamarine
    span
      display none
    &.Facebook
      background-image url(../img/ico-facebook.png)
    &.Twitter
      background-image url(../img/ico-twitter.png)
    &.Youtube
      background-image url(../img/ico-youtube.png)
    &.Blog
      background-image url(../img/ico-blog.png)
#contenido
  background $white
  padding 1px ($paddingBox *2) ($paddingBox *2)
  h2.titulo_biblio
  h2.titulo_presentacion
    padding-bottom (($paddingBox *2) - 3px)
    border-bottom 1px solid $gray

  h2.titulo_presentacion
    color $aquamarine

  p
    text-align justify
    margin-bottom $paddingBox
  .creditos
    font-style italic
    color black
    font-weight bold
    small
      font-weigth normal
    strong
      font-weight normal
      color $textGray
  .cred_antes
    border-top 1px dotted $gray
    padding-top $paddingBox

#nrno-libros
  padding-bottom $paddingBox*4
  min-height 300px
  p.tit
    font-size $fontSize
    padding $paddingBox
    color $textColor
    text-decoration none
    margin auto
  ul
    ulUnformat(inline-block)
    &
      text-align justify
      margin 0 -1.25%
      font-style italic
    li
      width 22.5%
      position relative
      vertical-align top
      margin $paddingBox 1.25%
      a
        display block
        border 1px solid transparent
        width 100%
        min-height 250px
        margin auto
        position relative
        top 0
        overflow hidden
        padding 0
        border-radius $rad
        color $textColor
        text-decoration none
        transition ease-in-out 250ms all
        box-shadow rgba(0,0,0,0) 0 0 0 0

        &:hover
          border 1px solid $gray3
          box-shadow rgba(0,0,0,.2) 4px 8px 10px 0
          top -5px
          .figure:after
            box-shadow rgba(0,0,0,0) 0 0px 25px

          .hover
            opacity 1
          .figcaption
            opacity 0
          .img
            transform scale(1.5) rotate(15deg)
            opacity 0.25


      .figure
        overflow hidden
        display block
        margin auto
        padding 0
        position relative
        height 200px
        width 100%
        &:after
          content ""
          display block
          position absolute
          top 100%
          height $paddingBox *2
          width 100%
          border-radius 100%
          transition ease-in-out 250ms all
          box-shadow rgba(0,0,0,.5) 0 -4px 25px

      .figcaption
      .hover
        display block
        display flex
        color $white
        position absolute
        left 0
        right 0
        top 0
        bottom 0
        font-style normal
        padding $paddingBox
        transition ease-in-out 500ms all
        text-shadow rgba(0,0,0,.5) 0 0 12px
        line-height (150px - ( $paddingBox *2))
        span
          display inline-block
          vertical-align middle
          line-height 1.3em
          align-self center

      .figcaption
        opacity 0
      .hover
        opacity 0

      .imagen
        position absolute
        width 100%
        height 100%
        z-index 0
        display block
        background $aquamarine
        overflow hidden

      .img
        position absolute
        width 100%
        min-height 100%
        display block
        opacity 1
        transition ease-in-out 500ms all
        transform scale(1) rotate(0deg)

      em
        display none
#chrono
  background $gray3 url(../img/presentacion/bg_cronologia.png) left center
  position relative
  scrollbar(rgba(#000,0))
  animation bg_left 40s linear infinite
  .envol
    overflow auto
    overflow-y hidden
    position relative
    height 600px

  img
    position absolute
    top 50%
    margin-top -70px
    margin-left $paddingBox *2
    display block
    width auto

  .nrno-times
    position absolute
    width 1960px
    height 4px
    top 50%
    left 610px
    display block
    list-style none
    margin 0 ($paddingBox *2)
    font-size $text_small
    line-height 1.2em
    padding 0
    border-top dotted 4px white

    li
      position absolute
      margin 20px
      margin-left -74px
      border 1px solid $salmon
      transition ease-in-out 250ms all
      transform scale(1)
      cursor default
      &:last-child
        margin-right $paddingBox


      &:before
      &:after
        content ""
        display block
        position absolute
        left 50%
        transition ease-in-out 250ms all
        opacity 1
      &:before
        content ""
        display block
        width 1px
        height 20px
        border-left 1px dotted white
        margin-left -1px
      &:after
        border-radius 100px
        height 10px
        width 10px
        background $salmon
        margin-left -10px
        border 4px solid $aquamarine

      &:hover
        transform scale(1.25)
        &
          background rgba(0,0,0,.33)
          border-color rgba(0,0,0,.33)
        a
          border-color $salmon
          background $salmon
        strong
          color $black
        &:before
        &:after
          opacity 0

    a
      border 1px solid $aquamarine
      position relative
      display block
      padding ($paddingBox *0.5) ($paddingBox *0.5) 0 0
      margin ($paddingBox * -1) ($paddingBox * -1) ($paddingBox * 0.5) ($paddingBox *0.5)
      color $white
      text-align center
      width auto
      width 130px
      min-height 180px
      transition ease-in-out 250ms all

      > *
        margin 0 $paddingBox
        transition ease-in-out 250ms all

      strong
        display block
        font-size $text_h1= 32px
        font-style italic
        line-height 1.25em
        margin-bottom 0.25em
        border-bottom 1px solid #fff
        white-space nowrap
        padding $paddingBox 0 ($paddingBox * 0.25)
        &:before
        &:after
