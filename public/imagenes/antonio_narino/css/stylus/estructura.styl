#nrno-popUp
  display none
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  overflow auto
  background-color $gray4
  background-color rgba($white,.9)
  opacity 0
  transition ease-in-out 750ms all
  z-index 10000
  .show-popUp &
    display block
    opacity 1
    animation loadingShow ease-in-out 750ms
    .modal-cont
      animation loadingShow_int ease-in-out 750ms
  .hide-popUp &
    display block
    animation loadingHide ease-in-out 750ms

  .modal-cont
    background $black
    background rgba(0,0,0,.75)
    padding $paddingBox
    margin auto
    left 5%
    right 5%
    width 750px
    height auto
    top 5%
    bottom auto
    position absolute
    box-shadow $box-shadow3
    color $white
    transition ease-in-out width 250ms
  #popup-quit
    display block
    float right
    background rgba($gray,0)
    width $paddingBox *2
    height $paddingBox *2
    color white
    font-size $text_h3
    opacity .75
    cursor pointer
    text-align center
    margin auto $paddingBox
    transition ease-in-out 250ms all
    &:hover
      background rgba($gray,.33)
      opacity 1

  #popUp-iframe
    box-shadow $box-shadow3
    background $white
    margin auto
    position relative
    margin-top $paddingBox *4
    overflow auto 
    > iframe
    > img
      display none
      height auto
      width 100%
      margin auto
      max-width 100%
      max-height 100%
      transition ease-in-out 250ms all
      &.zoom
        min-width 100%
        min-height 100%
        height auto
    > iframe
      min-height 450px

  #popUp-pie
    margin auto
    position relative
    padding $paddingBox *2 0
    text-align justify
    &:empty
      display none

