beforeAfter($display=block,$position=absolute,$width=100%,$height=100%)
	content ''
	display $display
	width $width
	height $height
	position $position
/*
span
	beforeAfter(block absolute 10px 11px)
*/

text-fill-color($ref=transparent)
	vendor text-fill-color, $ref
/*
body
	text-fill-color(text)
*/

defaultDisplay($display=block)
	display $display
	list-style none
	margin auto
	padding 0
/*
a
	defaultDisplay(inline-block)
*/
ulUnformat($display=block)
	&,ul,li
		defaultDisplay($display)
/*ul
	ulUnformat(inline-block)
*/

scrollbar($color=#666)
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	//scroll
	&::-webkit-scrollbar
		width: 6px
	&::-webkit-scrollbar-track
		-webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
		border-radius 2px
		background-color lighten($color, 80%)
	&::-webkit-scrollbar-thumb
		border-radius 10px
		background $gray
/*html
	scrollbar()
*/

no-select()
	-webkit-touch-callout none
	vendor user-select, none
