support-for-ie = true

vendor(prop, args)
	if args ==flex
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
	else
		-webkit-{prop} args
		-moz-{prop} args
		-ms-{prop} args
		-o-{prop} args
		{prop} args
/*
div
	vendor animation, foo 250ms ease-in-out*/

display(mode, args...)
	if mode == inline-block
		display inline-block args
		if support-for-ie
			zoom 1
			*display inline args
	else
		display mode args
/*
a
	display inline-block
*/

arrow($width=20px, $height=20px, $direction=up, $color=red)
	width 0
	height 0
	display inline-block
	border-style solid

	if $direction == right
		border-width $height 0 $height $width
		border-color transparent transparent transparent $color

	if $direction == left
		border-width $height $width $height 0
		border-color transparent $color transparent transparent

	if $direction == up
		border-width 0 $height $width $height
		color $height
		border-color transparent transparent $color transparent

	if $direction == down
		border-width $width $height 0 $height
		border-color $color transparent transparent transparent

	if $direction == downLeft
		border-width $width 0 0 $height
		border-color transparent transparent transparent $color

	if $direction == downRight
		border-width 0 0 $height $width
		border-color transparent transparent $color transparent

	if $direction == upRight
		border-width 0 $width $height 0
		border-color transparent $color transparent transparent

	if $direction == upLeft
		border-width $height $width 0 0
		border-color $color transparent transparent transparent
/*button
	arrow 20px 20px down green*/

input-placeholder()
	&.placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
	&::-webkit-input-placeholder
		{block}
/*input
	+input-placeholder()
		color red*/

